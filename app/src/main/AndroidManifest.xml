<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.budgetbuddy.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BudgetBuddy">

        <activity
            android:name=".activitys.Splash"
            android:theme="@style/Theme.BudgetBuddy.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activitys.LaunchActivity" />

        <activity android:name=".activitys.CreateBudgetActivity" />

        <activity android:name=".activitys.MainActivity" />

        <activity android:name=".activitys.AddIncome" />

        <activity android:name=".activitys.AddExpense" />

        <activity android:name=".activitys.AddEstimate" />
    </application>

</manifest>